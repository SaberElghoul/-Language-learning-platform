{% extends "@FOSUser/StudentLayout.html.twig" %}
{% block fos_user_content %}
    <div class="uk-grid" data-uk-grid-margin data-uk-grid-match id="user_profile">
        <div class="uk-width-large-10-10">
            <div class="md-card">
                <div class="user_heading">
                    <div class="user_heading_menu" data-uk-dropdown="{pos:'left-top'}">
                        <i class="md-icon material-icons md-icon-light">&#xE5D4;</i>

                    </div>
                    <div class="user_heading_avatar">
                        <div class="thumbnail">
                            <img src="{{ asset ('uploads/images/'~ teacher.image) }}" alt="user avatar"/>
                        </div>
                    </div>
                    <div class="user_heading_content">
                        <h2 class="heading_b uk-margin-bottom"><span class="uk-text-truncate">{{ teacher.username }}</span><span class="sub-heading">{{ teacher.Headline }}</span><span class="sub-heading">{{ teacher.pays }}</span></h2>

                    </div>
                    <a class="md-fab md-fab-small md-fab-accent" href="#">
                        <i class="material-icons">videocam</i>
                    </a>
                    <a id="button" class="md-fab md-fab-small md-fab-accent" >
                        <i class="material-icons md-36 uk-text-success">&#xE156;</i>
                    </a>

                </div>
                <div class="user_content">
                    <ul id="user_profile_tabs" class="uk-tab" data-uk-tab="{connect:'#user_profile_tabs_content', animation:'slide-horizontal'}" data-uk-sticky="{ top: 48, media: 960 }">


                    </ul>
                    <ul id="user_profile_tabs_content" class="uk-switcher uk-margin">
                        <li>
                            <div class="uk-grid uk-margin-medium-top uk-margin-large-bottom" data-uk-grid-margin>
                                <div class="uk-width-large-1-2">
                                    <h4 class="heading_c uk-margin-small-bottom">Contact Info</h4>
                                    <ul class="md-list md-list-addon">
                                        <li>
                                            <div class="md-list-addon-element">
                                                <i class="md-list-addon-icon material-icons">&#xE158;</i>
                                            </div>
                                            <div class="md-list-content">
                                                        <span class="md-list-heading">

                                                                {{ teacher.email }} </span>
                                                <span class="uk-text-small uk-text-muted">Email</span>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="md-list-addon-element">
                                                <i class="md-list-addon-icon material-icons">&#xE0CD;</i>
                                            </div>
                                            <div class="md-list-content">
                                                <span class="md-list-heading">{{ teacher.phoneNumber }}</span>
                                                <span class="uk-text-small uk-text-muted">Phone</span>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="md-list-addon-element">
                                                <i class="md-list-addon-icon uk-icon-facebook-official"></i>
                                            </div>
                                            <div class="md-list-content">
                                                <span class="md-list-heading">facebook.com/{{ teacher.facebook }}</span>
                                                <span class="uk-text-small uk-text-muted">Facebook</span>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="md-list-addon-element">
                                                <i class="md-list-addon-icon uk-icon-twitter"></i>
                                            </div>
                                            <div class="md-list-content">
                                                <span class="md-list-heading">twitter.com/{{ teacher.twitter }}</span>
                                                <span class="uk-text-small uk-text-muted">Twitter</span>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                                <div class="uk-width-large-1-2">
                                    <h4 class="heading_c uk-margin-small-bottom">About</h4>
                                    <ul class="md-list md-list-addon">
                                        <li>
                                            <div class="md-list-addon-element">
                                                <i class="md-list-addon-icon material-icons">info</i>
                                            </div>
                                            <div class="md-list-content">
                                                        <span class="md-list-heading">

                                                                {{ teacher.about }} </span>
                                            </div>
                                        </li>
                                    </ul>
                                </div>

                            </div>

                            <div class="uk-grid uk-margin-medium-top uk-margin-large-bottom" data-uk-grid-margin>
                                <div  >
                                    <h4 class="heading_c uk-margin-small-bottom">My Calendar</h4>


                                    <ul class="md-list md-list-addon">
                                        <!-- Button trigger modal -->
                                        <!-- Button trigger modal -->

                                        <table class="table table-hover">
                                            <tbody>
                                            <tr> <td>Start Time </td>     <td>End Time </td>  <td> Langauge</td> <td>Day</td> </tr>

                                            {% for disponibility in disponibilities %}


                                                <tr>
                                                    <td>{% if disponibility.starttime %}{{ disponibility.starttime|date('H:i:s') }}{% endif %}</td>
                                                    <td>{% if disponibility.endtime %}{{ disponibility.endtime|date('H:i:s') }}{% endif %}</td>
                                                    <td>{{ disponibility.taughtlanguage }}</td>
                                                    <td>{% if disponibility.day %}{{ disponibility.day|date('Y-m-d') }}{% endif %}</td>

                                                </tr>
                                            {% endfor %}

                                            </tbody>
                                        </table>

                                     </ul>
                                </div>





                            </div>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </div>


    <!-- Button trigger modal -->




    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>



{% endblock %}
