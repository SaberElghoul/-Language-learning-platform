{% trans_default_domain 'FOSUserBundle' %}


<div class="login-box content">
    <div align="center" class="login-logo">
        <b>EjanGul</b>.COM</a>
    </div>
    {% if error %}
        <div class="alert alert-error">username or password incorrect</div>
    {% endif %}
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="uk-form-row">
            <label for="login_username">{{ 'security.login.username'|trans }}</label>
            <input class="md-input" type="text" id="username" name="_username"
                   value="{{ last_username }}" required="required" autocomplete="username"/>
        </div>
        <div class="uk-form-row">
            <label for="login_password">Password</label>
            <input type="password" id="password" name="_password"
                   class="md-input form-control" required="required" autocomplete="current-password" />
        </div>
        <div class="uk-margin-medium-top">
            <input type="submit" id="_submit"  class="md-btn md-btn-primary md-btn-block md-btn-large"
               name="_submit" value="{{ 'security.login.submit'|trans }}">
        </div>
       <div class="uk-margin-top">
            <a id="login_help_show" class="uk-float-right">Need help?</a>
            <span class="icheck-inline">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" data-md-icheck />
                            <label for="remember_me" class="inline-label">{{ 'security.login.remember_me'|trans }}</label>
                        </span>
        </div>
    </form>
</div>









